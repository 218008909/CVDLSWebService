@page
@model CVDLS.Pages.Location.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    if (User.Identity.Name.Contains("manager"))
    {
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Location</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.Stationary)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.Stationary)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.Coordinates)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.Coordinates)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.DateRecorded)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.DateRecorded)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.TagsInLocation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.TagsInLocation)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Location.LocationID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="./Index">Back to List</a>
            </form>
        </div>
    }
    else
    {
        <div>
            <!--Notify user of denied permission-->
            <p>
                You do not have permission to access this page.
            </p>
        </div>
    }
}
else
{
    <div>
        <!--Provide links for unidentified users-->
        <p>
            Please <a href=Identity/Account/Login>log in</a> or <a href="Identity/Account/Register">register</a> to see if you have permission to take this action.
        </p>
    </div>
}